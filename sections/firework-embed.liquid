This file was automatically generated. Any changes you make will be overridden.
{% endcomment %}

<div id="section-firework-embed">
    {% case section.settings.layout %}
      {% when 'carousel' %}
        <fw-embed-feed
              channel="{{section.settings.channel}}"
              playlist="{{section.settings.playlist}}"
              hashtag="{{section.settings.hashtag}}"
              mode="row"
              size="{{section.settings.size}}"
              pip="{{section.settings.pip}}"
              open_in="{{section.settings.open_id}}"
              placement="middle"
              player_placement="{{section.settings.player_placement}}"
            ></fw-embed-feed>
      {% when 'grid' %}
        <fw-embed-feed
              channel="{{section.settings.channel}}"
              playlist="{{section.settings.playlist}}"
              hashtag="{{section.settings.hashtag}}"
              mode="grid"
              size="{{section.settings.size}}"
              pip="{{section.settings.pip}}"
              open_in="{{section.settings.open_id}}"
              placement="middle"
              player_placement="{{section.settings.player_placement}}"
            ></fw-embed-feed>
      {% when 'floating_player' %}
        <fw-storyblock
              id="move-to-body"
              channel="{{section.settings.channel}}"
              playlist="{{section.settings.playlist}}"
              hashtag="{{section.settings.hashtag}}"
              mode="pinned"
              size="{{section.settings.size}}"
              pip="{{section.settings.pip}}"
              open_in="{{section.settings.open_id}}"
              placement="middle"
              player_placement="{{section.settings.player_placement}}"
            ></fw-storyblock>
      {% when 'storyblock' %}
        <fw-storyblock
              channel="{{section.settings.channel}}"
              playlist="{{section.settings.playlist}}"
              hashtag="{{section.settings.hashtag}}"
            ></fw-storyblock>
      {% when 'floating_button' %}
        <fw-channel-button
          id="move-to-body"
          channel="{{section.settings.channel}}"
          channel="{{section.settings.playlist}}"
          hashtag="{{section.settings.hashtag}}"
          open_in="{{section.settings.open_in}}"
          placement="{{section.settings.player_placement}}"
          vertical="{{section.settings.vertical_offset}}"
          horizontal="{{section.settings.horizontal_offset}}"
        >
          <a href="{{section.settings.floating_button_cta_url}}">{{section.settings.floating_button_cta_text}}</a>
        </fw-channel-button>
    {% endcase %}
</div>

{% stylesheet %}
  #section-firework-embed {
    margin: 1rem;
  }
{% endstylesheet %}

{% javascript %}
  /* This function is required for the floating player and floating button.
  Shopify's page-builder places these DOM nodes in a weird way that blocks
  the static positioning from working properly. Moving the node to be a
  direct child of <body> makes it work properly. */

  var element = document.getElementById('move-to-body');
  if (element) {
    document.querySelector('body').appendChild(element);
  }
{% endjavascript %}

